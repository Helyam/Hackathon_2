<div class="border bg-warning rounded p-2 my-2">
	<h3> Décidons ensemble</h3>
	<div>
		{% for topic in topics %}
			{% if topic.status == "A Valider" %}
			<a href="{{ path('topics_show', {'id': topic.id}) }}">
				<div class="card text-center m-2">
					<div class="card-body p-1">
						<h5 class="card-title mb-1">{{ topic.titre }}</h5>
					</div>
					<div class="card-footer text-muted p-1">
						<i class="fas fa-arrow-circle-up" style="color:green;"></i> {{ topic.votePositif }},
						<i class="fas fa-arrow-circle-down" style="color:red;"></i>{{ topic.voteNegatif }},
						  ouvert le {{ topic.dateDeCreation ? topic.dateDeCreation|date('d/m/Y h:i') : '' }}
					</div>
				</div>
			</a>
			{% endif %}
		{% endfor %}
	</div>
</div>
<div class="border bg-info rounded p-2 my-2">
	<h3> Réalisé ou en cour de réalisation</h3>
	<div>
		{% for topic in topics %}
			{% if topic.status == "Réalisé" %}
		<a href="{{ path('topics_show', {'id': topic.id}) }}">
		<div class="card text-center m-2">
			<div class="card-body p-1">
				<h5 class="card-title mb-1"> {{ topic.titre }}
				</h5>
			</div>
			{% set pourcentPos = 100 * topic.votePositif / (topic.votePositif + topic.voteNegatif) %}
			<div class="card-footer text-muted p-1">
				favorable: {{ pourcentPos|round }}% , budget: {{ topic.budget }}, cloture le {{ topic.dateDeCreation ? topic.dateDeCreation|date('d/m/Y h:i') : '' }}
			</div>
		</div>
		</a>
			{% endif %}
		{% endfor %}
	</div>
</div>